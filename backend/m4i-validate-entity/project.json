{
  "name": "validate-entity",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "backend/m4i-validate-entity/m4i_validate_entity",
  "targets": {
    "add": {
      "executor": "@nxlv/python:add",
