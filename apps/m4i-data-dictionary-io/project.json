{
  "name": "m4i-data-dictionary-io",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/m4i-data-dictionary-io/m4i_data_dictionary_io",
  "tags": [],
  "targets": {
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "options": {
        "bundleLocalDependencies": true,
        "lockedVersions": false,
        "outputPath": "{projectRoot}/dist/",
        "publish": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": [
          "m4i_atlas_post_install",
          "tests",
          "scripts"
        ]
      }
    },
    "serve": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run python -m m4i_data_dictionary_io"
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run pytest tests/",
        "cwd": "apps/m4i-data-dictionary-io"
      }
    },
    "docker-build": {
      "dependsOn": [
        {
          "target": "build",
          "params": "forward"
        }
      ],
      "command": "docker build . -f {projectRoot}/Dockerfile -t {projectName}:latest",
      "options": {
        "env": {
          "DOCKER_BUILDKIT": "1"
        }
      }
    },
    "docker-publish": {
      "dependsOn": [
        {
          "target": "docker-build",
          "params": "forward"
        }
      ],
      "command": "docker push {args.namespace}/{args.tag}:{args.version}",
      "options": {
        "namespace": "aureliusenterprise",
        "tag": "{projectName}",
        "version": "latest"
      }
    }
  }
}